<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">

        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:radius="6dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" />
                    <solid android:color="@color/grey_60" />
                    <padding android:bottom="0dp" android:left="25dp" android:right="25dp" android:top="0dp" />
                    <size android:width="70dp" android:height="40dp" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item>
        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" android:radius="6dp" android:topLeftRadius="3dp" android:topRightRadius="3dp" />
                    <stroke android:width="1dp" android:color="@color/grey_60" />
                    <solid android:color="@color/transparent" />
                    <padding android:bottom="0dp" android:left="25dp" android:right="25dp" android:top="0dp" />
                    <size android:width="70dp" android:height="40dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>